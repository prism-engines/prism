{
  "domain": "cwru_bearing",
  "description": "Case Western Reserve University Bearing Fault Data",
  "download_url": "https://engineering.case.edu/bearingdatacenter/download-data-file",

  "index": {
    "column": "sample_index",
    "dimension": "time",
    "unit": "samples",
    "sampling_rate_hz": 12000
  },

  "signals": {
    "DE_time": {"unit": "g", "quantity": "acceleration", "class": "periodic", "description": "Drive End accelerometer"},
    "FE_time": {"unit": "g", "quantity": "acceleration", "class": "periodic", "description": "Fan End accelerometer"},
    "BA_time": {"unit": "g", "quantity": "acceleration", "class": "periodic", "description": "Base accelerometer"},
    "RPM": {"unit": "rpm", "quantity": "frequency", "class": "analog", "description": "Shaft speed"}
  },

  "global_constants": {
    "sampling_rate_12k": 12000,
    "sampling_rate_48k": 48000,
    "duration_seconds": 10
  },

  "bearing_geometry": {
    "type": "6205-2RS JEM SKF",
    "ball_diameter_in": 0.3125,
    "pitch_diameter_in": 1.537,
    "n_balls": 9,
    "contact_angle_deg": 0
  },

  "fault_frequencies": {
    "BPFO": {"formula": "0.4053 * RPM / 60", "description": "Ball Pass Frequency Outer race"},
    "BPFI": {"formula": "0.5947 * RPM / 60", "description": "Ball Pass Frequency Inner race"},
    "BSF": {"formula": "0.3983 * RPM / 60", "description": "Ball Spin Frequency"},
    "FTF": {"formula": "0.3983 * RPM / 60", "description": "Fundamental Train Frequency"}
  },

  "fault_frequencies_at_1797rpm": {
    "shaft_frequency_hz": 29.95,
    "BPFO_hz": 107,
    "BPFI_hz": 162,
    "BSF_hz": 141
  },

  "expected_behaviors": {
    "healthy": {
      "fft_peaks": ["1x shaft", "2x shaft", "3x shaft"],
      "entropy": "low",
      "lyapunov": "near_zero",
      "description": "Predictable periodic signal"
    },
    "outer_race_fault": {
      "fft_peaks": ["BPFO", "2x BPFO", "3x BPFO"],
      "entropy": "high",
      "description": "BPFO ~107 Hz + harmonics"
    },
    "inner_race_fault": {
      "fft_peaks": ["BPFI", "2x BPFI", "sidebands"],
      "entropy": "high",
      "description": "BPFI ~162 Hz + sidebands at shaft frequency"
    },
    "ball_fault": {
      "fft_peaks": ["BSF", "2x BSF"],
      "entropy": "medium",
      "description": "BSF ~141 Hz + harmonics"
    }
  },

  "fault_conditions": {
    "normal": "Healthy bearing, no defects",
    "IR007": "Inner race fault, 0.007 inch diameter",
    "IR014": "Inner race fault, 0.014 inch diameter",
    "IR021": "Inner race fault, 0.021 inch diameter",
    "OR007": "Outer race fault, 0.007 inch diameter",
    "OR014": "Outer race fault, 0.014 inch diameter",
    "OR021": "Outer race fault, 0.021 inch diameter",
    "B007": "Ball fault, 0.007 inch diameter",
    "B014": "Ball fault, 0.014 inch diameter",
    "B021": "Ball fault, 0.021 inch diameter"
  },

  "validation": {
    "engines_to_test": ["fft", "wavelet", "lyapunov", "entropy"],
    "primary_use_case": "Fault frequency detection, periodic signals, FFT validation"
  }
}
