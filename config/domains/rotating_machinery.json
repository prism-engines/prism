{
  "domain": "rotating_machinery",
  "description": "Rotating Machinery Vibration and Motor Current Data",
  "download_url": "https://data.mendeley.com/datasets/v8fk7dgz85",
  "collection_url": "https://github.com/VictorBauler/awesome-bearing-dataset",

  "index": {
    "column": "sample",
    "dimension": "time",
    "unit": "samples",
    "sampling_rate_hz": 25600
  },

  "signals": {
    "vib_x": {"unit": "m/s²", "quantity": "acceleration", "class": "periodic", "description": "Vibration X-axis"},
    "vib_y": {"unit": "m/s²", "quantity": "acceleration", "class": "periodic", "description": "Vibration Y-axis"},
    "current_a": {"unit": "A", "quantity": "current", "class": "periodic", "description": "Motor current phase A"},
    "current_b": {"unit": "A", "quantity": "current", "class": "periodic", "description": "Motor current phase B"},
    "current_c": {"unit": "A", "quantity": "current", "class": "periodic", "description": "Motor current phase C"},
    "temperature": {"unit": "°C", "quantity": "temperature", "class": "analog", "description": "Bearing temperature"},
    "rpm": {"unit": "rpm", "quantity": "frequency", "class": "analog", "description": "Shaft rotational speed"}
  },

  "global_constants": {
    "sampling_rate_hz": 25600,
    "line_frequency_hz": 60,
    "motor_poles": 4,
    "slip_nominal": 0.03
  },

  "fault_conditions": {
    "normal": "Healthy bearing and rotor",
    "inner_race": "Inner race defect",
    "outer_race": "Outer race defect",
    "ball": "Rolling element defect",
    "cage": "Cage defect",
    "unbalance": "Rotor unbalance",
    "misalignment": "Shaft misalignment",
    "looseness": "Mechanical looseness",
    "rubbing": "Rotor-stator rubbing"
  },

  "vibration_signatures": {
    "unbalance": {
      "dominant_frequency": "1x RPM",
      "phase": "single_reference",
      "description": "Single frequency at shaft speed"
    },
    "misalignment": {
      "dominant_frequency": ["1x RPM", "2x RPM"],
      "axial_vibration": "high",
      "description": "1x and 2x with high axial component"
    },
    "looseness": {
      "dominant_frequency": ["0.5x RPM", "1x RPM", "harmonics"],
      "description": "Sub-harmonic and many harmonics"
    },
    "bearing_fault": {
      "dominant_frequency": ["BPFO", "BPFI", "BSF", "FTF"],
      "sidebands": true,
      "description": "Characteristic frequencies with modulation"
    }
  },

  "motor_current_signatures": {
    "healthy": {
      "dominant_frequency": "line_frequency",
      "sidebands": "rotor_slot_harmonics"
    },
    "broken_rotor_bar": {
      "sidebands": "2 * slip * line_frequency",
      "description": "Sidebands around line frequency"
    },
    "eccentricity": {
      "pattern": "amplitude_modulation",
      "frequency": "rotor_frequency"
    }
  },

  "sensor_fusion_opportunities": {
    "vibration_current_correlation": {
      "signals": ["vib_x", "current_a"],
      "expected": "correlated_at_fault_frequencies",
      "description": "Mechanical faults appear in both vibration and current"
    },
    "temperature_trend": {
      "signals": ["temperature", "vib_x"],
      "expected": "temperature_lags_vibration",
      "description": "Temperature rise follows increased vibration"
    }
  },

  "expected_behaviors": {
    "vib_x": {
      "class": "periodic",
      "dominant_frequency": "shaft_rpm",
      "entropy_healthy": "low",
      "entropy_faulty": "high"
    },
    "current_a": {
      "class": "periodic",
      "dominant_frequency": "line_frequency",
      "sidebands_indicate_fault": true
    },
    "temperature": {
      "class": "analog",
      "trend": "trending_with_degradation",
      "lag_behind_vibration": true
    }
  },

  "validation": {
    "engines_to_test": ["fft", "wavelet", "lyapunov", "entropy"],
    "primary_use_case": "Sensor fusion, rotating equipment faults, multimodal analysis"
  }
}
